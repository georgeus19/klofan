{
    "name": "klofan",
    "version": "1.0.0",
    "scripts": {
        "build": "turbo build",
        "dev": "dotenv -- turbo dev --concurrency=35",
        "test": "turbo test --concurrency=1",
        "lint": "turbo lint",
        "format": "prettier --write \"**/*.{ts,tsx,md}\"",
        "clean": "turbo clean && rm -rf node_modules .turbo"
    },
    "workspaces": [
        "apps/*",
        "apps/analyzers/*",
        "apps/recommenders/*",
        "packages/*"
    ],
    "devDependencies": {
        "@klofan/eslint-config": "*",
        "@klofan/typescript-config": "*",
        "dotenv-cli": "^7.3.0",
        "prettier": "^3.1.1",
        "turbo": "^1.11.3"
    }
}
